<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tictactoe" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#50FA7B</item>
        <item name="colorOnPrimary">#f8f8f2</item>

        <item name="colorOnBackground">#1c1c1c</item>

        <item name="colorButtonNormal">#88c0d0</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#88c0d0</item>
        <item name="colorSecondaryVariant">#81a1c1</item>
        <item name="colorOnSecondary">#5e81ac</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#d0d0d0</item>
        <item name="android:textColorSecondary">#bcbcbc</item>
        <item name="android:windowBackground">#2E3440</item>
    </style>

    <style name="txt1">
        <item name="android:textColor">@color/foreground</item>
    </style>
    <style name="_txt">
        <item name="android:textColorHint">@color/foreground</item>
    </style>


    <style name="Theme.Transparent.ImagePicker"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#282828</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>